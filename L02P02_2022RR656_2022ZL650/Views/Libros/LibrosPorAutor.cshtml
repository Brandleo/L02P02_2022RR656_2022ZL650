@model IEnumerable<L02P02_2022RR656_2022ZL650.Models.libros>

<div class="container mt-5">
    <!-- Encabezado -->
    <p>Seleccione el autor -> Seleccione el Libro -> Se muestran los comentarios existentes -> Adicione un nuevo comentario</p>

    <h1 class="text-center mb-4">Libros del Autor</h1>

    <!-- Autor seleccionado -->
    <h2 class="text-primary">Autor: @ViewBag.NombreAutor</h2>

    <!-- Tabla de Libros -->
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="bg-success text-white">
            <tr>
                <th>Nombre del Libro</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libro in Model)
            {
                <tr>
                    <td class="align-middle">@libro.nombre</td>
                    <td class="text-center">
                        <a href="@Url.Action("Index", "Comentarios", new { idLibro = libro.id })" class="btn btn-success">
                            Seleccionar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>